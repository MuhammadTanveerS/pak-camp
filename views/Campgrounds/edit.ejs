<% layout('layouts/boilerplate') %> 

<h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="post" novalidate class="validate">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campgrounds[title]" value="<%= camp.title %> " required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campgrounds[location]" value="<%= camp.location %> " required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="campgrounds[image]" value="<%= camp.image %> " required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="campgrounds[price]" value="<%= camp.price %> " required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description Url</label>
                <textarea class="form-control" type="text" id="description" name="campgrounds[description]"  required><%= camp.description %> </textarea>
            </div>
            <div class="mb3">
                <button class="btn btn-info">Update Campground</button>
            </div>
            
        </form>
    </div>
